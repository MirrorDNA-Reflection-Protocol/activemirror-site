# Environment variables for Active Mirror Safety Proxy
# Copy this to .env and fill in values

# Required: At least ONE inference key must be set
# The proxy cascades through available providers on failure
GROQ_API_KEY=your_groq_api_key_here

# Optional: Additional providers for cascade fallback
# If Groq fails, proxy tries DeepSeek â†’ Mistral in order
DEEPSEEK_API_KEY=
MISTRAL_API_KEY=

# Optional: Frontier fallback (if all above fail)
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Optional: API secret for request authentication
# If set, all requests must include Bearer token or HMAC signature
MIRROR_API_SECRET=

# Optional: Enable content logging (default: false)
# Only metadata is logged by default
LOG_CONTENT=false
