{
  "version": "1.0.0",
  "name": "MirrorGate Policy Pack",
  "updated": "2026-01-29",
  "author": "N1 Intelligence",

  "response_types": {
    "TOOL_DIRECT": {
      "description": "Direct factual answer, optional reflective follow-up",
      "constraints": {
        "max_tokens": 500,
        "requires_answer": true,
        "optional_reflection": true,
        "max_questions": 1
      }
    },
    "MIRROR_REFLECT": {
      "description": "1 observation + 1-2 questions, no advice",
      "constraints": {
        "max_tokens": 200,
        "requires_observation": true,
        "min_questions": 1,
        "max_questions": 2,
        "no_advice": true,
        "no_claims": true
      }
    },
    "CLARIFY": {
      "description": "1-2 clarifying questions when intent unclear",
      "constraints": {
        "max_tokens": 100,
        "min_questions": 1,
        "max_questions": 2,
        "no_assumptions": true
      }
    },
    "REFUSE": {
      "description": "Short refusal + safe alternative",
      "constraints": {
        "max_tokens": 80,
        "requires_alternative": true,
        "tone": "compassionate"
      }
    }
  },

